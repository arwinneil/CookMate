<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookMate.DetailPage">
    <ContentPage.Content>
        <ScrollView>

            <StackLayout VerticalOptions="Fill">
                <StackLayout VerticalOptions="FillAndExpand">
                    <Image x:Name="picture" HeightRequest="300" Aspect="AspectFill"></Image>
                    <Label  FontSize="50"  Margin="10,0,10,0" x:Name="title"></Label>
                    <Label  FontSize="20" Margin="10,0,10,10" x:Name="description"></Label>
                    <Label  Text="Ingredients" FontSize="30" Margin="10,0,10,10" TextColor="Gray" x:Name="iLabel"></Label>
                    <Label   Margin="10,0,10,10" x:Name="i1"></Label>
                    <Label   Margin="10,0,10,10" x:Name="i2"></Label>
                    <Label   Margin="10,0,10,10" x:Name="i3"></Label>
                    <Label   Margin="10,0,10,10" x:Name="i4"></Label>
                </StackLayout>

                <Button Text="Start Cooking" BackgroundColor="#2196F3" TextColor="White" HorizontalOptions="Fill" Margin="0,0,0,10" Pressed="Button_Pressed"/>

            </StackLayout>

        </ScrollView>
      
    </ContentPage.Content>
</ContentPage>